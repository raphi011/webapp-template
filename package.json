{
  "name": "webapp-template",
  "version": "0.1.0",
  "private": true,
  "imports": {
    "#.storybook/*": "./.storybook/*"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest --project storybook",
    "test:ci": "vitest --project storybook --run",
    "test:coverage": "vitest --project storybook --run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "chromatic": "chromatic --exit-zero-on-changes",
    "db:migrate": "drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "db:seed": "bun run db/seed.ts",
    "test:db": "vitest --project db --run",
    "format": "prettier --write .",
    "typecheck": "bunx tsc --noEmit",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "1.11.0",
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "framer-motion": "^12.34.3",
    "next": "^16.1.6",
    "next-auth": "5.0.0-beta.30",
    "next-intl": "^4.8.3",
    "pg": "^8.19.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "server-only": "^0.0.1",
    "zod": "4"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@storybook/addon-a11y": "10.2.12",
    "@storybook/addon-docs": "10.2.12",
    "@storybook/addon-themes": "10.2.12",
    "@storybook/addon-vitest": "10.2.12",
    "@storybook/react-vite": "10.2.12",
    "@tailwindcss/postcss": "^4.2.1",
    "@tailwindcss/vite": "^4.2.1",
    "@types/node": "^25.3.0",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-istanbul": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "chromatic": "^15.2.0",
    "drizzle-kit": "^0.31.9",
    "eslint": "^9.39.3",
    "eslint-config-next": "^16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "playwright": "^1.58.2",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "remark-gfm": "^4.0.1",
    "storybook": "10.2.12",
    "tailwindcss": "^4.2.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,css,json,yml,yaml}": "prettier --write"
  }
}
